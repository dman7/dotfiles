#------------------------------------------------------------------------------
# Pretty colors
#--------------
export PS1="\[\033[32;1m\]\u\[\033[32m\]@\[\033[32m\]\h: \[\033[32m\]\w \$\[\033[m\] "


#------------------------------------------------------------------------------
# Path extensions
#----------------
export PATH=~/.rbenv/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:$PATH


#------------------------------------------------------------------------------
# rbenv and gem-related setup
#----------------------------
eval "$(rbenv init -)"
alias b="bundle exec"


#------------------------------------------------------------------------------
# git related setup
#------------------
if [ -f ~/.git-completion.bash ]; then
  . ~/.git-completion.bash
fi
